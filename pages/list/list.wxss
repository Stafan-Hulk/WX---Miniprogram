.page-section {
  position: relative;
  width: 90%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-top: 4%;
}
.page-section .delete{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  background-image: url("https://ss0.bdstatic.com/70cFuHSh_Q1YnxGkpoWK1HF6hhy/it/u=3293680427,2413099791&fm=26&gp=0.jpg");
  background-size: 100% 100%;
  width: 30rpx;
  height: 30rpx;
}

.item-name {
  font-size: 25rpx;
  margin: 10rpx 0 10rpx 30rpx;
}

.img {
  width: 200rpx;
  height: 200rpx;
}
.public{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 60rpx;
  right:20rpx; 
  padding: 2px;
  background-color: rgba(50, 211, 233, 0.678);
  border-radius: 50%;
}